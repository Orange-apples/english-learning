<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxylm.springboot.dao.SysRoleMapper">

    <select id="findUserRole" resultType="com.cxylm.springboot.model.system.Role">
        select r.*
        from sys_role r
                 left join sys_user_role ur on (r.id = ur.role_id)
                 left join sys_user u on (u.id = ur.user_id)
        where u.id = #{userId}
    </select>

    <select id="getRoleList" resultType="com.cxylm.springboot.model.system.Role">
        SELECT * FROM sys_role
    </select>
</mapper>
